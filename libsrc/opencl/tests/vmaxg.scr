max_warnings 2

Set n 8


Define Testit 1 prefix
Vector ${1}_indices $n 1 int32
Vector ${1}_f $n 1 float
Ramp1D ${1}_f 0 1
Scalar ${1}_nocc 1 int32
Scalar ${1}_extval 1 float

VSet ${1}_indices 99
veclib execute vmaxg ${1}_indices ${1}_f ${1}_extval ${1}_nocc quit
advise '\nTest 1'
Display ${1}_f
Display ${1}_extval
Display ${1}_nocc
Display ${1}_indices

VSet ${1}_f[2] 7
VSet ${1}_f[3] 7
VSet ${1}_indices 99
veclib execute vmaxg ${1}_indices ${1}_f ${1}_extval ${1}_nocc quit
advise '\nTest 2'
Display ${1}_f
Display ${1}_extval
Display ${1}_nocc
Display ${1}_indices

VSet ${1}_f 4
VSet ${1}_indices 99
veclib execute vmaxg ${1}_indices ${1}_f ${1}_extval ${1}_nocc quit
advise '\nTest 3'
Display ${1}_f
Display ${1}_extval
Display ${1}_nocc
Display ${1}_indices

.

Testit h
platforms select $DEFAULT_PLATFORM $DEFAULT_GPU quit
Testit g

exit


