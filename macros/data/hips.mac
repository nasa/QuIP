Define Put_Image 2 'data object' filename
fileio
  Tell_If "opening file $2 , to write object $1"
  write $2 "nframes('$1')"
#  echo "writing object $1"
  put $1 $2
  quit
.

Define Put_Raw 2 'data object' 'raw filename'
Filetype raw
Put_Image $1 $2
.

Define Put_Hips2 2 'data object' 'HIPS filename'
Filetype hips2
